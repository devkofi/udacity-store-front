{
  "name": "udacity-store-front",
  "version": "1.0.0",
  "description": "This is a udacity project to create shopping cart using postgres, express, typescript and nodejs",
  "main": "index.js",
  "scripts": {
    "compile": "npx tsc",
    "copy-files": "copyfiles --error --up 1 src/views/**/*.* build/",
    "copy-r": "xcopy \"src/views/**/*.*\" \"build/\"",
    "build": "npm run compile && npm run copy-files",
    "prettier": "prettier --config .prettierrc --write src/**/*.ts ",
    "lint": "eslint  \"src/**/*.ts\"  ",
    "start": "nodemon ./build/server localhost 3000",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./build --onSuccess \"nodemon ./build/server.js\" --onFailure \"echo Beep! Compilation Failed\"",
    "migrate-up": "db-migrate --env test up && db-migrate up",
    "migrate-down": "db-migrate --env test down && db-migrate down",
    "test": "cross-env ENV=test && npx tsc && db-migrate --env test up && jasmine && db-migrate db:drop test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devkofi/udacity-store-front.git"
  },
  "keywords": [
    "store-front",
    "udacity-store",
    "udacity"
  ],
  "author": "Kofi Nyarko Kumi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/devkofi/udacity-store-front/issues"
  },
  "homepage": "https://github.com/devkofi/udacity-store-front#readme",
  "devDependencies": {
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jasmine": "^4.5.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/db-migrate-pg": "^0.0.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.15",
    "@types/jasmine": "^4.3.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "cookie-parser": "^1.4.6",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jasmine-spec-reporter": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.8.0",
    "supertest": "^6.3.3"
  }
}
